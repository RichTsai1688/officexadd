<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:type="TaskPaneApp">

  <!-- 必須是 GUID -->
  <Id>7b0b1216-8e8a-4cf3-8720-3211e7259adb</Id>

  <Version>1.0.0.0</Version>
  <ProviderName>Example Inc.</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="OfficeXAdd" />
  <Description DefaultValue="AI-powered text rewriting assistant for Office" />

  <IconUrl DefaultValue="http://localhost:3000/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="http://localhost:3000/assets/icon-80.png" />
  <SupportUrl DefaultValue="http://www.example.com/support" />

  <AppDomains>
    <AppDomain>http://localhost:3000</AppDomain>
  </AppDomains>

  <Hosts>
    <!-- Word 文件 -->
    <Host Name="Document" />
  </Hosts>

  <DefaultSettings>
    <SourceLocation DefaultValue="http://localhost:3000/taskpane.html" />
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <!-- Add-in Commands & 功能區設定 -->
  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>

          <!-- Word 開啟後的 Get Started 引導 -->
          <GetStarted>
            <Title resid="GetStarted.Title" />
            <Description resid="GetStarted.Description" />
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl" />
          </GetStarted>

          <!-- Commands 的 function file -->
          <FunctionFile resid="Commands.Url" />

          <!-- 功能區按鈕：Home Tab 上的一個群組 -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="CommandsGroup.Label" />
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16" />
                  <bt:Image size="32" resid="Icon.32x32" />
                  <bt:Image size="80" resid="Icon.80x80" />
                </Icon>

                <!-- 你的 Taskpane 按鈕 -->
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- 快捷鍵：Ctrl+Alt+I (Windows) / Ctrl+Alt+I (Mac 對應的按法) -->
          <ExtensionPoint xsi:type="KeyboardShortcuts">
            <Shortcuts>
              <Shortcut>
                <Key>Ctrl+Alt+I</Key>
                <Action xsi:type="ShowTaskpane">
                  <TaskpaneId>ButtonId1</TaskpaneId>
                  <SourceLocation resid="Taskpane.Url" />
                </Action>
              </Shortcut>
            </Shortcuts>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- 靜態資源：Icons / Url / 文案 -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="http://localhost:3000/assets/icon-16.png" />
        <bt:Image id="Icon.32x32" DefaultValue="http://localhost:3000/assets/icon-32.png" />
        <bt:Image id="Icon.80x80" DefaultValue="http://localhost:3000/assets/icon-80.png" />
      </bt:Images>

      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://go.microsoft.com/fwlink/?LinkId=276812" />
        <bt:Url id="Commands.Url" DefaultValue="http://localhost:3000/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="http://localhost:3000/taskpane.html" />
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Get started with OfficeXAdd" />
        <bt:String id="CommandsGroup.Label" DefaultValue="OfficeXAdd" />
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show AI Assistant" />
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="Your AI-powered text rewriting assistant is ready!" />
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Click to show the AI rewriting assistant" />
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>
